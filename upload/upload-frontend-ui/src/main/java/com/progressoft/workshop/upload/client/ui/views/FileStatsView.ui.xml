<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:ma='urn:import:gwt.material.design.addins.client'>

    <ui:with field="bundle" type="com.progressoft.workshop.upload.client.ui.views.UploadBundle"/>
    <ui:style gss="true">

    </ui:style>

    <m:MaterialRow separator="true">
        <m:MaterialTitle ui:field="statsContentTitle" textColor="LIGHT_BLUE_DARKEN_4"
                         addStyleNames="{bundle.style.statsContentTitle}"/>
        <m:MaterialColumn grid="l4 m12 s12" ui:field="totalRecords">
        </m:MaterialColumn>
        <m:MaterialColumn grid="l4 m12 s12" ui:field="totalAmount">
        </m:MaterialColumn>
        <m:MaterialColumn grid="l4 m12 s12" ui:field="totalTransactions">
        </m:MaterialColumn>
    </m:MaterialRow>

</ui:UiBinder>