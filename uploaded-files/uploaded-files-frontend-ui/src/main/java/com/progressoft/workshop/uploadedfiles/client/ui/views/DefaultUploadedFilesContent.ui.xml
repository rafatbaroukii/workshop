<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:m='urn:import:gwt.material.design.client.ui'
             xmlns:m.table='urn:import:gwt.material.design.client.ui.table'
             xmlns:m.html='urn:import:gwt.material.design.client.ui.html'
>

    <ui:with field="bundle" type="com.progressoft.workshop.uploadedfiles.client.ui.views.UploadedFilesBundle"/>
    <ui:style gss="true">
        .collection {
        height: calc(100% - 60px) !important;
        }
        .card{
        border: 1px solid #e3e3e3;
        border-radius:5px;
        }

        .cardcontent{
        padding:0px !important;
        }

        .cardheader{
        padding: 10px;
        border-bottom: 1px solid #dcdcdc;
        }

    </ui:style>

    <m:MaterialPanel>
        <m:MaterialRow margin="0">

            <m:MaterialColumn grid="l3 m3 s3" padding="0" hideOn="HIDE_ON_SMALL_DOWN">
                <m:MaterialCollection ui:field="itemsList" margin="0" overflow="AUTO">
                </m:MaterialCollection>
            </m:MaterialColumn>

            <m:MaterialColumn ui:field="detailsContainer" grid="l9 m9 s12" overflow="AUTO">
            </m:MaterialColumn>
        </m:MaterialRow>


    </m:MaterialPanel>

</ui:UiBinder>
